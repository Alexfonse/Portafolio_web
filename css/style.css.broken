      opacity: 1;
      visibility: visible;
  }

  .nav-item, .nav-link {
      font-size: 18px;
      padding: 12px;
      width: 100%;
      text-align: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
}

/* Circular Menu Label */
.menu-text-label {
